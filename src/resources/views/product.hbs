    <script>
        // Lắng nghe sự kiện click trên nút "BUYING"
document.querySelector('.product-buy button').addEventListener('click', function() {
  // Lấy giá trị số lượng AMOUNT và tên sản phẩm product.name
  var amount = document.querySelector('.product-quantity input').value;
  var productName = document.querySelector('.product-name h1').textContent;

  // Tạo đối tượng XMLHttpRequest
  var xhr = new XMLHttpRequest();

  // Thiết lập yêu cầu POST đến /buy
  xhr.open('POST', '/addcart', true);
  xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');

  // Xử lý sự kiện khi yêu cầu hoàn thành
  xhr.onload = function() {
    if (xhr.status === 200) {
      // Xử lý phản hồi từ máy chủ nếu cần
      console.log(xhr.responseText);
    }
  };

  // Chuẩn bị dữ liệu để gửi đi
  var data = 'productName=' + encodeURIComponent(productName) + '&amount=' + encodeURIComponent(amount);

  // Gửi yêu cầu POST với dữ liệu đã chuẩn bị
  xhr.send(data);
});
